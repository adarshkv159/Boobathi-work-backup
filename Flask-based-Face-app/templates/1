    </footer>
    <!-- SOCKET.IO -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.5/socket.io.min.js"></script>
    <!-- ANIMATION LIBRARY (Anime.js) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script>
        // --- GLOBALS ---
        const socket = io();

        let samples = [];
        let capturingSamples = false;

        // --- UTILS ---
        function showStatus(msg, type='info') {
            const bar = document.getElementById('status-bar');
            const icon = bar.querySelector('.fa');
            const msgSpan = document.getElementById('status-message');
            msgSpan.textContent = msg;

            icon.className = 'fa';
            bar.className = 'status-bar';
            if(type === 'success') {
                icon.classList.add('fa-check-circle', 'status-success');
                bar.classList.add('status-success');
            } else if(type === 'warning') {
                icon.classList.add('fa-exclamation-triangle', 'status-warning');
                bar.classList.add('status-warning');
            } else if(type === 'error') {
                icon.classList.add('fa-times-circle', 'status-error');
                bar.classList.add('status-error');
            } else {
                icon.classList.add('fa-info-circle', 'status-info');
                bar.classList.add('status-info');
            }
            anime({
                targets: bar,
                scale: [1.08, 1],
                duration: 400,
                easing: 'easeOutBack'
            });
        }
        function setFacesCount(n) {
            const fc = document.getElementById('faces-count');
            fc.textContent = n > 0 ? `${n} face${n > 1 ? 's' : ''}` : 'No faces';
            anime({
                targets: fc,
                scale: [1.18, 1],
                duration: 420,
                easing: 'easeOutBack'
            });
        }
        function updateDevices(videoList, audioList) {
            const vsel = document.getElementById('video-device');
            const asel = document.getElementById('audio-device');
            vsel.innerHTML = '';
            videoList.forEach(d=>{
                vsel.innerHTML += `<option value="${d.id}">${d.display}</option>`;
            });
            asel.innerHTML = '';
            audioList.forEach(d=>{
                asel.innerHTML += `<option value="${d.id}">${d.display}</option>`;
            });
        }
        function updateFaceList(names) {
            const ul = document.getElementById('face-list');
            ul.innerHTML = '';
            if (!names || !names.length) {
                ul.innerHTML = '<li style="color:#888;">No faces enrolled.</li>';
                document.getElementById('total-faces').textContent = '0';
                return;
            }
            names.forEach(n=>{
                let el = document.createElement('li');
                el.innerHTML = `<span>${n}</span>
                    <i class="fa fa-trash" title="Delete" onclick="deleteFaceQuick('${n}')"></i>`;
                ul.appendChild(el);
            });
            document.getElementById('total-faces').textContent = names.length;
        }
        function showSampleSelection(samplesArr) {
            samples = samplesArr;
            capturingSamples = true;
            // Show the samples section in camera card
            document.getElementById('samples-section').classList.add('active');
            const grid = document.getElementById('sample-grid');
            grid.innerHTML = '';
            samples.forEach(sample => {
                let div = document.createElement('div');
                div.className = 'sample-card animate__animated animate__fadeInUp';
                div.setAttribute('data-sample-id', sample.id);
                div.innerHTML = `
                    <img src="data:image/jpeg;base64,${sample.image}" alt="sample">
                    <small>${new Date(sample.captured_at*1000).toLocaleTimeString()}</small>
                `;
                div.onclick = () => selectSample(sample.id, div);
                grid.appendChild(div);
            });
        }
        function hideSampleSelection() {
            capturingSamples = false;
            document.getElementById('samples-section').classList.remove('active');
        }
        function selectSample(id, cardDiv) {
            if (!capturingSamples) return;
            document.querySelectorAll('.sample-card').forEach(e=>e.classList.remove('selected'));
            cardDiv.classList.add('selected');
            socket.emit('select_face_sample', {sample_id: id});
            capturingSamples = false;
        }
        function deleteFaceQuick(name) {
            if(confirm(`Delete face: ${name}?`)) {
                socket.emit('quick_delete', {name});
            }
        }
        // --- EVENTS ---
        window.onload = ()=>{
            // Devices
            fetch('/api/devices').then(r=>r.json()).then(data=>{
                updateDevices(data.video_devices, data.audio_output_devices);
            });
            // Names
            fetch('/api/names').then(r=>r.json()).then(data=>{
                updateFaceList(data.names);
                document.getElementById('total-faces').textContent = data.total_faces;
            });
            // Status
            fetch('/api/status').then(r=>r.json()).then(data=>{
                showStatus(data.status_message, data.status_type);
            });
        }
        document.getElementById('btn-start').onclick = ()=>{
            socket.emit('start_camera');
            document.getElementById('btn-start').disabled = true;
            document.getElementById('btn-stop').disabled = false;
        };
        document.getElementById('btn-stop').onclick = ()=>{
            socket.emit('stop_camera');
            document.getElementById('btn-stop').disabled = true;
            document.getElementById('btn-start').disabled = false;
        };
        document.getElementById('btn-reset').onclick = ()=>{
            socket.emit('reset_system');
            document.getElementById('btn-start').disabled = false;
            document.getElementById('btn-stop').disabled = true;
        };
        document.getElementById('btn-add').onclick = ()=>{
            let name = document.getElementById('input-name').value.trim();
            if(!name) return showStatus('Enter a name to add', 'warning');
            socket.emit('manual_add_face', {name});
        };
        document.getElementById('btn-del').onclick = ()=>{
            let name = document.getElementById('del-name').value.trim();
            if(!name) return showStatus('Enter name to delete', 'warning');
            socket.emit('manual_delete_face', {name});
        };
        document.getElementById('video-device').onchange = function() {
            socket.emit('update_device', {type:'video', id:parseInt(this.value)});
        };
        document.getElementById('audio-device').onchange = function() {
            socket.emit('update_device', {type:'audio_output', id:this.value});
        };
        document.getElementById('btn-cancel-samples').onclick = function() {
            socket.emit('cancel_face_capture');
            hideSampleSelection();
        }

        // --- SOCKET EVENTS ---
        socket.on('status_update', function(data) {
            showStatus(data.message, data.type);
        });
        socket.on('video_frame', function(data) {
            document.getElementById('video-frame').src = 'data:image/jpeg;base64,' + data.frame;
            setFacesCount(data.faces_detected);
        });
        socket.on('face_list_update', function(data) {
            updateFaceList(data.names);
        });
        socket.on('face_added', function(data) {
            showStatus('Added: ' + data.name, 'success');
            socket.emit('get_face_list');
        });
        socket.on('face_deleted', function(data) {
            showStatus('Deleted: ' + data.name, 'success');
            socket.emit('get_face_list');
        });
        socket.on('sample_captured', function(data) {
            // Optional: animation, or toast
        });
        socket.on('samples_ready', function(data) {
            showSampleSelection(data.samples);
        });
        socket.on('samples_cleared', function() {
            hideSampleSelection();
        });
        socket.on('system_reset', function() {
            showStatus('System Reset', 'info');
            document.getElementById('faces-count').textContent = '0 faces';
            document.getElementById('video-frame').src = '';
            socket.emit('get_face_list');
        });
    </script>
</body>
</html>
