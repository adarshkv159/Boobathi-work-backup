    <main>
        <!-- CAMERA & STATUS -->
        <div class="card" style="flex:2; min-width:320px;">
            <h2>
                <i class="fa-solid fa-video"></i> Live Camera Feed
            </h2>
            <div class="status-bar" id="status-bar">
                <i class="fa fa-info-circle status-info"></i>
                <span id="status-message">Loading...</span>
            </div>
            <div class="video-container animate__animated animate__fadeIn">
                <img id="video-frame" src="" alt="Camera Feed">
                <span class="faces-count animate__animated animate__pulse" id="faces-count">0 faces</span>
            </div>
            <div class="input-row" style="margin-bottom: 1em;">
                <label for="video-device"><i class="fa fa-camera"></i> Video:</label>
                <select id="video-device"></select>
                <label for="audio-device"><i class="fa fa-volume-high"></i> Audio:</label>
                <select id="audio-device"></select>
            </div>
            <div class="button-row">
                <button id="btn-start" type="button"><i class="fa fa-play"></i> Start Camera</button>
                <button id="btn-stop" type="button" disabled><i class="fa fa-stop"></i> Stop</button>
                <button id="btn-reset" type="button"><i class="fa fa-rotate-left"></i> Reset</button>
            </div>
            <!-- SAMPLE SELECTION MOVED HERE -->
            <div class="sample-selection-section" id="samples-section">
                <h2 style="margin-top:0;"><i class="fa-solid fa-image"></i> Select Best Face</h2>
                <div id="sample-grid" class="sample-grid"></div>
                <div class="button-row">
                    <button id="btn-cancel-samples" type="button" style="background:var(--danger)"><i class="fa fa-xmark"></i> Cancel</button>
                </div>
            </div>
        </div>
        <!-- FACE MANAGEMENT -->
        <div class="card" style="flex:1;">
            <h2><i class="fa-solid fa-users"></i> Face Database</h2>
            <div class="input-row">
                <input type="text" id="input-name" placeholder="Name to Add">
                <button id="btn-add"><i class="fa fa-user-plus"></i> Add</button>
            </div>
            <ul class="face-list" id="face-list"></ul>
            <form class="input-row" style="margin-top:1.2em;" onsubmit="return false;">
                <input type="text" id="del-name" placeholder="Name to Delete">
                <button id="btn-del"><i class="fa fa-user-minus"></i> Delete</button>
            </form>
            <div style="margin-top:1em;">
                <span style="font-size: 0.93em; color:#666;">Total faces: <span id="total-faces">0</span></span>
